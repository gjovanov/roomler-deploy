# =============================================================================
# Roomler K8s Deployment â€” Environment Variables
# Copy to .env and fill in actual values
# =============================================================================

# --- MongoDB ---
MONGO_ROOT_USERNAME=roomler
MONGO_ROOT_PASSWORD=your_mongo_password
MONGO_DATABASE=roomlerdb

# --- Roomler App ---
URL=https://roomler.live
API_URL=https://roomler.live
JANUS_URL=wss://janus.roomler.live/janus_ws

# --- TURN/STUN ---
TURN_URL=turns:coturn.roomler.live:443?transport=udp
COTURN_AUTH_SECRET=your_coturn_shared_secret

# --- OAuth Providers ---
FACEBOOK_ID=your_facebook_id
FACEBOOK_SECRET=your_facebook_secret
GOOGLE_ID=your_google_id
GOOGLE_SECRET=your_google_secret
GITHUB_ID=your_github_id
GITHUB_SECRET=your_github_secret
LINKEDIN_ID=your_linkedin_id
LINKEDIN_SECRET=your_linkedin_secret
MICROSOFT_ID=your_microsoft_id
MICROSOFT_SECRET=your_microsoft_secret

# --- Email ---
SENDGRID_API_KEY=your_sendgrid_api_key

# --- Misc ---
GIPHY_API_KEY=your_giphy_api_key
GOOGLE_ANALYTICS_ID=your_ga_id
NUXT_TELEMETRY_DISABLED=1
SUPER_ADMIN_EMAILS=["your_admin_email"]
WEB_PUSH_CONTACT=mailto:your_admin_email
WEB_PUSH_PUBLISH_KEY=your_vapid_public_key
WEB_PUSH_PRIVATE_KEY=your_vapid_private_key

# --- Infrastructure ---
KUBECONFIG_PATH=/path/to/kubeconfig
SSH_KEY_PATH=/path/to/ssh/private_key
K8S_MASTER_IP=10.10.10.10
K8S_WORKER1_IP=10.10.10.11
K8S_WORKER2_IP=10.10.10.12
K8S_SSH_USER=ubuntu
HOST_PUBLIC_IP=your_server_public_ip
NGINX_CONF_DIR=/path/to/nginx/conf.d
BACKUP_BASE_PATH=/path/to/roomler-deploy/backup
DOCKER_MONGO_CONTAINER=mongo2
DOCKER_MONGO_DATA_PATH=/path/to/docker/mongo/data
DOCKER_UPLOADS_PATH=/path/to/docker/uploads
