---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
  namespace: {{ roomler_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis
  template:
    metadata:
      labels:
        app: redis
    spec:
      containers:
        - name: redis
          image: {{ redis_image }}
          ports:
            - containerPort: 6379
              name: redis
          resources:
            requests:
              cpu: {{ redis_cpu_request }}
              memory: {{ redis_memory_request }}
            limits:
              cpu: {{ redis_cpu_limit }}
              memory: {{ redis_memory_limit }}
          livenessProbe:
            exec:
              command: ["redis-cli", "ping"]
            initialDelaySeconds: 5
            periodSeconds: 10
          readinessProbe:
            exec:
              command: ["redis-cli", "ping"]
            initialDelaySeconds: 3
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: redis
  namespace: {{ roomler_namespace }}
spec:
  selector:
    app: redis
  ports:
    - port: 6379
      targetPort: 6379
