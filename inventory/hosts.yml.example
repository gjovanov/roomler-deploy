---
all:
  hosts:
    localhost:
      ansible_connection: local
      ansible_python_interpreter: /usr/bin/python3

  children:
    host:
      hosts:
        localhost:

    k8s_cluster:
      children:
        k8s_master:
          hosts:
            k8s-master:
              ansible_host: <k8s-master-ip>

        k8s_workers:
          hosts:
            k8s-worker1:
              ansible_host: <k8s-worker1-ip>
            k8s-worker2:
              ansible_host: <k8s-worker2-ip>

      vars:
        ansible_user: <ssh-user>
        ansible_ssh_private_key_file: <path-to-ssh-private-key>
        ansible_python_interpreter: /usr/bin/python3
        ansible_become: true
        ansible_become_method: sudo
